<Window x:Class="laboratory.Users_Window.Admin_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laboratory.Users_Window"
        mc:Ignorable="d"
        Title="Главное меню [Администратор]" 
        Icon="/Resourses/logo.png"
        Height="450" 
        Width="800"
        MinHeight="300"
        MinWidth="450"
        MaxHeight="750"
        MaxWidth="1150">
    <Viewbox Stretch="Uniform">
        <Grid MinHeight="300" 
              MinWidth="450" 
              Height="450"
              Width="800"
              MaxHeight="750" 
              MaxWidth="1150">
            <Border Background="#FF468C50" BorderThickness="1" HorizontalAlignment="Left" Height="252" VerticalAlignment="Top" Width="212" Margin="557,10,0,0"/>
            <Button 
                Content="Сформировать отчет" 
                Margin="10,82,410,0" 
                VerticalAlignment="Top" 
                Click="GenerateReports_Click"
                Height="35" 
                FontFamily="Calibri"
                Background="#FF6EDC82" 
                FontSize="15"/>
            <Button 
                Content="Контроль за пользователями" 
                Margin="10,138,410,0"
                VerticalAlignment="Top" 
                Click="MonitorUsers_Click"
                Height="35" 
                FontFamily="Calibri"
                Background="#FF6EDC82" 
                FontSize="15"/>
            <Button 
                Content="Работать с данными о расходных материалах" 
                Margin="10,192,410,0" 
                VerticalAlignment="Top" 
                Click="WorkWithMaterials_Click"
                Height="35" 
                FontFamily="Calibri"
                Background="#FF6EDC82" 
                FontSize="15"/>
            <Button 
                Content="Выйти"
                Margin="10,245,410,0"
                VerticalAlignment="Top" 
                Click="Logout_Click" 
                Height="35" 
                FontFamily="Calibri"
                Background="#FF6EDC82" 
                FontSize="15"/>
            <Image 
            Margin="577,24,51,243"
            Source="/Resourses/User_images/Administrator.png" Stretch="Fill"/>
            <Label 
            x:Name="Admin_name"
            HorizontalAlignment="Left"
            Margin="586,207,0,0" 
            VerticalAlignment="Top" 
            Height="43" 
            Width="154" 
            FontFamily="Calibri" 
            FontSize="20"/>
        </Grid>
    </Viewbox>
</Window>
