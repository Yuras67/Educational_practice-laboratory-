<Window x:Class="laboratory.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laboratory"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800" Icon="resourses/logo.png"
        MinHeight="300"
        MinWidth="450"
        MaxHeight="750"
        MaxWidth="1150">
    <Viewbox Stretch="Uniform">
        <Grid MinHeight="300" 
              MinWidth="450" 
              Height="300"
              Width="450"
              MaxHeight="750" 
              MaxWidth="1150">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="66*"/>
                <RowDefinition Height="46*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="137*"/>
                <ColumnDefinition Width="179*"/>
                <ColumnDefinition Width="134*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Войти" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    Width="100" 
                    FontSize="15" 
                    Background="#FF468C50"
                    Grid.Column="1" 
                    Grid.Row="4" 
                    Height="32" FontFamily="Calibri" Foreground="White" Margin="0,4,0,0"/>
            
            <PasswordBox x:Name="Password" 
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center" 
                         Width="170" 
                         Height="30"
                         FontSize="20" 
                         Grid.Column="1" 
                         MaxLength="15"
                         Grid.Row="2" Background="#FF6EDC80"
                         PasswordChar='*'/>
            <Label Content="Вход" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="30"
                   Height="50" 
                   Width="74" 
                   Grid.Column="1" FontFamily="Calibri"/>
            <TextBox x:Name="Login" 
                     HorizontalAlignment="Center" 
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center" 
                     Width="170"
                     Height="30"
                     FontSize="20" 
                     Grid.Row="1"
                     MaxLength="15"
                     Grid.Column="1" Background="#FF6EDC82"/>
            <Label Content="Логин" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" 
                   Width="158" Height="25"
                   Grid.Row="1"
                   Grid.Column="1" FontFamily="Calibri"/>
            <Label Content="Пароль"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" 
                   Width="159" Height="25" 
                   Grid.Row="2"
                   Grid.Column="1" FontFamily="Calibri"/>
            <Image Grid.Column="1" Margin="146,24,7,24" Grid.Row="2" Source="/Resourses/invisible_pas.png" Stretch="Fill"/>
            <Button Grid.Column="1" HorizontalAlignment="Left" Margin="105,0,0,0" Grid.Row="2" VerticalAlignment="Center" Height="27" Width="34" BorderBrush="#00000000" Click="Button_Click" Foreground="#00000000" OpacityMask="Black">
                <Button.Background>
                    <ImageBrush ImageSource="/free-icon-eye-8692940.png" TileMode="Tile" Stretch="Fill"/>
                </Button.Background>
            </Button>

        </Grid>
    </Viewbox>
</Window>